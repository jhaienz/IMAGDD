---
import Layout from '../layouts/Layout.astro';
import ParticipantRegistrationForm from '../components/ParticipantRegistrationForm';
---

<Layout title="IMAGDD 2026 - Participant Registration" description="Register to attend IMAGDD 2026">
  <div class="bg-gradient-to-br from-purple-600 via-pink-500 to-orange-400 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Register for IMAGDD 2026</h1>
      <p class="text-xl md:text-2xl font-light">
        Secure your spot at the premier multimedia and game design event
      </p>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <ParticipantRegistrationForm client:load />
  </div>
</Layout>
